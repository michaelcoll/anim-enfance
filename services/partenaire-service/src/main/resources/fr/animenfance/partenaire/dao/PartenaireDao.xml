<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fr.animenfance.partenaire.dao.PartenaireDao">

  <resultMap id="partenaire" type="fr.animenfance.bean.partenaire.Partenaire">
    <id column="ptn_id" property="id" />
    <result column="ptn_name" property="name" />
  </resultMap>

  <select id="getById" resultMap="partenaire">
    SELECT * FROM partenaire WHERE ptn_id = #{id}
  </select>

  <select id="list" resultMap="partenaire">
    SELECT * FROM partenaire
  </select>

  <insert id="create" parameterType="fr.animenfance.bean.partenaire.Partenaire">
    INSERT INTO partenaire (ptn_name) VALUES (#{item.name})
  </insert>

  <delete id="deleteById">
    DELETE FROM partenaire WHERE ptn_id = #{id}
  </delete>
</mapper>
