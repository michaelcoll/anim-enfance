<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fr.animenfance.creche.dao.CrecheDao">

  <resultMap id="creche" type="fr.animenfance.bean.creche.Creche">
    <id column="cre_id" property="id" />
    <result column="cre_name" property="name" />
  </resultMap>

  <select id="getById" resultMap="creche">
    SELECT * FROM CRECHE.creche WHERE cre_id = #{id}
  </select>

  <select id="list" resultMap="creche">
    SELECT * FROM CRECHE.creche
  </select>

  <insert id="create" parameterType="fr.animenfance.bean.creche.Creche">
    INSERT INTO CRECHE.creche (cre_name) VALUES (#{item.name})
  </insert>

  <delete id="deleteById">
    DELETE FROM CRECHE.creche WHERE cre_id = #{id}
  </delete>
</mapper>
