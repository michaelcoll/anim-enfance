<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fr.animenfance.user.dao.UserDao">

  <resultMap id="user" type="fr.animenfance.bean.user.User">
    <id column="usr_id" property="id" />
    <result column="usr_name" property="name" />
  </resultMap>

  <select id="getById" resultMap="user">
    SELECT * FROM USER.`user` WHERE usr_id = #{id}
  </select>

  <select id="list" resultMap="user">
    SELECT * FROM USER.`user`
  </select>

  <insert id="create" parameterType="fr.animenfance.bean.creche.Creche">
    INSERT INTO USER.`user` (usr_name) VALUES (#{item.name})
  </insert>

  <delete id="deleteById">
    DELETE FROM USER.`user` WHERE usr_id = #{id}
  </delete>
</mapper>
